import java.util.Scanner;

public class Main
{
    public static void main(String [] args)
    {
        Scanner keyboard = new Scanner (System.in);
        System.out.print("Enter a number:" + " ");
        int number = keyboard.nextInt();
        if (number > 0)
        {
            System.out.println("Number is positive");
        }
       else if (number < 0)
        {
            System.out.println("Number is negative");
        }
        else
        {
            System.out.println("Number is 0");
        }

    
    }
}
public class Check
{
    public static void main (String [] args)
    {
        Scanner keyboard = new Scanner (System.in);
        System.out.print("Enter a number:" + " ");
        int number = keyboard.nextInt();
        boolean more50 = false;
        boolean divide5 = false;
        if (number >= 50 && number % 5 == 0)
        {
            more50 = true;
            divide5 = true;
            System.out.println("Number is divisible by 5 and is greater than 50");
        }
        else
        {
            System.out.println("Number is  not divisible by 5 and is not greater than 50");
        }
    }
}

public class Even
{
    public static void main(String [] args)
    {
        int i = 0;
        while (i <= 50)
        {
            System.out.println(i);
            i = i + 2;
        }
    }
}

public class Simple
{
    public static void main(String [] args)
    {
        int a = 1;
        double b = 1.0;
        char c = 'C';
        boolean d = true;
        if (d)
        {
            System.out.println("Yay");
            if (c == 'C')
            {
                a = a+5;
                b = b + 9.0;
                System.out.println(a);
                System.out.println(b);
            }
        }

    }
}
